<h1>Tasks:</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
  <%= link_to task.title, task_path(task) %> / Done: <%= task.completed %> / <%= link_to "Destroy Task", task_path(task), method: :delete,  data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
